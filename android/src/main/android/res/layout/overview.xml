<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:focusable="true" android:focusableInTouchMode="true">
    <LinearLayout android:layout_height="57dip" android:layout_width="fill_parent"
                  android:orientation="horizontal"
                  android:background="@drawable/bg_bar_02">
        <Button android:id="@+id/button_overview_minus" android:layout_height="wrap_content"
                android:layout_width="0dip" android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/button_datepicker_left"
                android:layout_margin="5dip"
                android:layout_weight="1"/>
        <Button android:id="@+id/button_overview_pickDate" android:layout_height="wrap_content"
                android:layout_width="0dip" android:textSize="18dip"
                android:textColor="@android:color/black" android:textStyle="bold"
                android:background="@drawable/datepicker_button"
                android:layout_margin="5dip"
                android:layout_weight="5"/>
        <Button android:id="@+id/button_overview_plus" android:layout_height="wrap_content"
                android:layout_width="0dip" android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/button_datepicker_right"
                android:layout_weight="1"
                android:layout_margin="5dip"/>
    </LinearLayout>
    <TableLayout android:layout_width="fill_parent" android:layout_weight="1"
                 android:layout_height="wrap_content"
                 android:stretchColumns="1">
        <ListView android:id="@id/android:list" android:layout_weight="1" android:layout_width="0dip"
                  android:layout_height="fill_parent" android:cacheColorHint="@android:color/transparent"
                  android:divider="@android:color/transparent" android:dividerHeight="0px"/>
    </TableLayout>
    <Button android:text="@string/new_transaction"
            android:textColor="@android:color/white"
            android:background="@drawable/button_green"
            android:id="@+id/button_new_transaction" android:layout_weight="0"
            android:layout_width="fill_parent"
            android:textStyle="bold"
            android:layout_marginTop="2dip"
            android:layout_height="50dip"/>
</LinearLayout>
